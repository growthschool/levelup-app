<h1><%= @post.title %></h1>

<%= simple_format @post.content %>

<h2>Comments</h2>

<table class="table">
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.user.display_name %></td>
    </tr>
  <% end %>
</table>

<% if current_user %>
  <h2>My comments</h2>
  <% @my_comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><strong><%= comment.user.display_name %></strong></td>
    </tr>
  <% end %>
<% end %>

<hr>
Total: <%= @comments.size %>
